generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  nome     String
  email    String  @unique
  senha    String
  role     UserRole @default(USUARIO)
}

model Process {
  id        String   @id @default(uuid())
  nome      String
  status    String
  createdAt DateTime @default(now())
}

enum UserRole {
  ADMIN
  GERENTE
  USUARIO
}
